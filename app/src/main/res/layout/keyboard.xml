<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_4"
            android:text="7"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
           />

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_7"
            android:layout_above="@id/button_5"
            android:text="8"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_8"
            android:layout_above="@id/button_6"
            android:text="9"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_3"
            android:layout_above="@id/button_off"
            android:text="DEL"
            android:background="@drawable/buttonshape_b"
            android:textColor="@color/darkG"
            android:layout_margin="1dp"
            />



        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_1"
            android:text="4"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_2"
            android:layout_toEndOf="@id/button_4"
            android:text="5"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_3"
            android:layout_toEndOf="@id/button_5"
            android:text="6"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_AC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_6"
            android:layout_above="@id/button_delete"
            android:text="AC"
            android:background="@drawable/buttonshape_b"
            android:textColor="@color/darkG"
            android:layout_margin="1dp"
            />


        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_0"
            android:text="1"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"/>


        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_1"
            android:layout_above="@id/button_enter"
            android:text="2"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_2"
            android:layout_above="@id/button_enter"
            android:text="3"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
        />

        <Button
            android:id="@+id/button_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/button_3"
            android:background="@drawable/buttonshape_b"
            android:text="OFF"
            android:textColor="@color/darkG" />


        <Button
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="0"
            android:background="@drawable/buttonshape_d"
            android:textColor="@color/blueSky"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_func"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funzione"
            android:layout_toEndOf="@id/button_9"
            android:background="@drawable/buttonshape_r"
            android:textColor="@color/darkG"
            android:layout_above="@id/button_AC"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/button_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:layout_toEndOf="@id/button_0"
            android:background="@drawable/buttonshape_b"
            android:textColor="@color/darkG"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/button_off"
            android:layout_margin="1dp"
            />


    </RelativeLayout>

</merge>