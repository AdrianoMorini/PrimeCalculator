<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#363636">


    <Button
        android:id="@+id/info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/info"
        />

    <Switch
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view2"
        android:layout_marginEnd="15dp"
        android:layout_toLeftOf="@id/info"
        android:layout_marginTop="10dp"
        android:thumb="@drawable/ic_music_note_"
        android:theme="@style/SwitchTheme"
        />


    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view2"
        android:layout_toEndOf="@+id/view1"
        android:background= "#8FB199"
        android:cursorVisible="false"
        android:layout_toStartOf="@id/view4"

        android:textColor="@color/yellow"
        android:textAlignment="textEnd"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/TVResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etNumber"
        android:background="#8FB199"
        android:layout_toEndOf="@+id/view1"
        android:textAlignment="textEnd"
        android:textColor="@color/yellow"
        android:layout_toStartOf="@id/view4"
        android:textSize="25dp"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/grad_screen_dark2"
        android:layout_below="@id/info"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="2dp"

        />
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/grad_screen_w1"
        android:layout_below="@id/TVResult"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="9dp"


        />

    <View
        android:id="@+id/view4"
        android:layout_width="3dp"
        android:layout_height="103dp"
        android:background="@drawable/grad_screen_w2"
        android:layout_below="@+id/view2"
        android:layout_above="@id/view3"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="3dp"
        android:layout_height="101dp"
        android:background="@drawable/grad_screen_dark1"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"/>

    <it.ticandtac.primecalculator.MyKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:layout_below="@id/functions_"
        />

    <NumberPicker
        android:id="@+id/functions_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseFunc"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="#363636"
        android:theme="@style/AppTheme.Picker">
    </NumberPicker>

    <TextView
        android:id="@+id/chooseFunc"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVResult"
        android:text="SCEGLI LA FUNZIONE:"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        />
</RelativeLayout>